@using SehatDoc.ViewModels
@model ScheduleViewModel

@using (Html.BeginForm("AddSchedule", "Doctor", FormMethod.Post))
{
    @Html.HiddenFor(m => m.DoctorId)

    <div class="form-group">
       <label asp-for="HospitalId"> </label>
        <select asp-for="HospitalId" asp-items="ViewBag.HospitalProfile"></select>
        @Html.ValidationMessageFor(m => m.HospitalId)
    </div>

    <div class="form-group">
        <label asp-for="DayOfWeek"> </label>
        <select asp-for="DayOfWeek" asp-items="Html.GetEnumSelectList<DayOfWeek>()"></select>
        @Html.ValidationMessageFor(m => m.DayOfWeek)
    </div>

    <div class="form-group">
        <label asp-for="StartTime"> </label>
        <input asp-for="StartTime" type="time" />
        @Html.ValidationMessageFor(m => m.StartTime)
    </div>

    <div class="form-group">
        <label asp-for="EndTime"> </label>
        <input asp-for="StartTime" type="time" />
        @Html.ValidationMessageFor(m => m.EndTime)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}
