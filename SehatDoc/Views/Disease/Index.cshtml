@using SehatDoc.Models;
@model IEnumerable<Disease>
@{
    ViewBag.Title = "Disease";
}


<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Disease Name</th>
       
            <th scope="col">Edit</th>
            <th scope="col">Details</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dis in Model)
        {
            var photopath = "~/images/" + dis.DiseaseImage;
            <tr>
                <td><img src="@photopath" asp-append-version="true" alt="Disease Image" width="50px" height="50px" /></td>
                <th scope="row">@dis.DiseaseID</th>
                <td>@dis.DiseaseName</td>
                

                <td><a asp-controller="Disease" asp-action="Edit" asp-route-id="@dis.DiseaseID" class="btn btn-secondary">Edit</a></td>
                <td><a asp-controller="Disease" asp-action="Details" asp-route-id="@dis.DiseaseID" class="btn btn-warning">Details</a></td>
                <td><a asp-controller="Disease" asp-action="Delete" asp-route-id="@dis.DiseaseID" class="btn btn-danger">Delete</a></td>
            </tr>
        }


    </tbody>
</table>