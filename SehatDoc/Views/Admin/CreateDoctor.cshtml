@model DoctorDTO;
@{
    ViewBag.Title = "Add Doctor";
    Layout = "_AdminDashboard";
}


<section class="h-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6">
                            <div class="card-body p-md-5 text-black">
                                <h3 class="mb-5 text-uppercase">Add Doctor</h3>

                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="FirstName">First name</label>
                                            <input asp-for="FirstName"  class="form-control form-control-lg" />
                                            <span asp-validation-for="FirstName"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="LastName">Last name</label>
                                            <input asp-for="LastName" class="form-control form-control-lg" />
                                            <span asp-validation-for="LastName"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="specialityId">Select Speciality</label>
                                            <select asp-for="specialityId" class="form-control" asp-items="ViewBag.Specialities">
                                                <option disabled>Select Speciality</option>
                                            </select>
                                            <span asp-validation-for="specialityId"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="LicenseNumber">Lisence Number</label>
                                            <input asp-for="LicenseNumber" class="form-control form-control-lg" />
                                            <span asp-validation-for="LicenseNumber"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" asp-for="PhotoPath" >Address</label>
                                    <input asp-for="PhotoPath" class="form-control form-control-lg" />
                                    <span asp-validation-for="PhotoPath"></span>
                                </div>

                                <div class="d-md-flex justify-content-start align-items-center mb-4 py-2">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="gender">Select Gender</label>
                                            <select asp-for="gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
                                                <option disabled>Select Gender</option>
                                            </select>
                                            <span asp-validation-for="gender"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="city">City</label>
                                            <select asp-for="city" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
                                                <option disabled>Select City</option>
                                            </select>
                                            <span asp-validation-for="city"></span>
                                        </div>
                                    </div>

                                    

                                <div class="d-flex justify-content-end pt-3">
                                    <button type="button" class="btn btn-light btn-lg">Reset all</button>
                                    <button type="button" class="btn btn-warning btn-lg ms-2">Submit</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>