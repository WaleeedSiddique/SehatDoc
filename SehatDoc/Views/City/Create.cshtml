@using SehatDoc.DTO_s;
@model CityDTO
@{
    ViewBag.Title = "Add City";
    Layout = "_AdminDashboard";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3" style="margin-top:50px;">
            <div class="card">
                <div class="=card-header">
                    <h4 class="text-center my-3">Add City</h4>
                </div>
                <form asp-controller="City" asp-action="Create" method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="StateId">Select State</label>
                            <select asp-for="StateId" class="form-control" asp-items="ViewBag.States">
                                <option>Select State</option>
                            </select>
                            <span asp-validation-for="StateId" class="text-danger"></span>
                        </div>
                            <div class="form-group">
                                <label asp-for="CityName">Name</label>
                                <input asp-for="CityName" class="form-control" />
                                <span asp-validation-for="CityName" class="text-danger"></span>
                            </div>
                          
                        <div class="card-footer text-right">
                            <a class="btn btn-danger" asp-controller="City" asp-action="Index">Cancel</a>
                            <button class="btn btn-primary">Submit</button>
                        </div>

                    </div>


                </form>
            </div>
        </div>
    </div>
</div>
