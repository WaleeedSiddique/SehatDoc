@model IEnumerable<City>
@{
    ViewBag.Title = "City";
    Layout = "_AdminDashboard";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <a href="@Url.Action("Create","City")" class="btn btn-primary">
                        <i class="fa-solid fa-plus" style="color:white;"></i>
                    </a>
                </div>
                <div class="text-center mx-auto">
                    <h4>City List</h4>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tr>

                            <th>State</th>
                            <th>City</th>
                            <th>Action</th>
                        </tr>
                        @foreach (var city in Model)
                        {
                            <tr>
                                <td>@city.State.StateName</td>
                                <td>@city.CityName</td>

                                <td>
                                    <a asp-controller="City" asp-action="Edit" asp-route-id="@city.Id" class="btn btn-sm btn-success">
                                        <i class="fa-solid fa-edit" style="color:white;"></i>
                                    </a>

                                    <a asp-controller="City" asp-action="Details" asp-route-id="@city.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-info-circle" style="color:white"></i>
                                    </a>
                                    <a asp-controller="City" asp-action="Delete" asp-route-id="@city.Id" class="btn btn-sm btn-danger">
                                        <i class="fa-solid fa-trash" style="color:white"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



