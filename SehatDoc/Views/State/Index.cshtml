@model IEnumerable<State>
@{
    ViewBag.Title = "Doctors";
    Layout = "_AdminDashboard";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <a href="@Url.Action("Create","State")" class="btn btn-primary">
                        <i class="fa-solid fa-plus" style="color:white;"></i>
                    </a>
                </div>
                <div class="text-center mx-auto">
                    <h4>State List</h4>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tr>
                           
                            <th>State Name</th>
                            <th>Action</th>
                        </tr>
                        @foreach (var state in Model)
                        {
                            <tr>
                               
                                <td>@state.StateName</td>
                               
                                <td>
                                    <a asp-controller="State" asp-action="Edit" asp-route-id="@state.Id" class="btn btn-sm btn-success">
                                        <i class="fa-solid fa-edit" style="color:white;"></i>
                                    </a>

                                    <a asp-controller="State" asp-action="Details" asp-route-id="@state.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-info-circle" style="color:white"></i>
                                    </a>
                                    <a asp-controller="State" asp-action="Delete" asp-route-id="@state.Id" class="btn btn-sm btn-danger">
                                        <i class="fa-solid fa-trash" style="color:white"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



