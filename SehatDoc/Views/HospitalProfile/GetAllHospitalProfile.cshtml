@model IEnumerable<HospitalProfile>
@{
    ViewBag.Title = "Home Page";
    Layout = "_Layout";
}

<section class="hospital_section layout_padding" style="background-color: white;">
    <div class="container">
        <div class="heading_container heading_center">
            <h2 style="color: black;">Our Hospitals</h2>
            <br />
          
        </div>
         @foreach (var hospital in Model)
            {
            var photopath = "~/images/" + hospital.HospitalLogo;
            <div class="container m-5">
        <div class="row shadow-sm" style="border-radius: 10px;">
           
                
            <div class="col-md-2">
                        <div class="img-box">
                        <a href="@Url.Action("HospitalProfile", new { id = hospital.HospitalID })">
                            <img src="@photopath" asp-append-version="true" alt="" style="width: 100%; border-radius: 50%; max-width: 120px; max-height: 150px; object-fit: cover;" />
                        </a>
                    </div>
            </div>
            <div class="col-md-10">
                    <span style="font-size:20px;line-height:1.3;">
                        <a href="@Url.Action("HospitalProfile", new { id = hospital.HospitalID })" style="color:#004D71;font-weight:600;">@hospital.HospitalName</a>
                    </span>
                        <p style="margin-top:0;margin-bottom:1rem;font-size:14px;display:block;color:black;">@hospital.HospitalLocation</p>
                        @if (hospital.DepartmentHospitalProfiles != null && hospital.DepartmentHospitalProfiles.Any())
                        {
                            <div style="display: flex; align-items: center;">
                                @foreach (var departmentProfile in hospital.DepartmentHospitalProfiles.Take(4))
                                {
                                    <button style="background-color:#e8f6f9;color:#004D71;border:none;border-radius:4px;font-weight:600;border-color:#00b3d8;margin-right: 10px;"> <span>@departmentProfile.DepartmentsDepartment.DepartmentName</span></button>
                                }

                                @if (hospital.DepartmentHospitalProfiles.Count() > 4)
                                {
                                    <form action="@Url.Action("HospitalProfile", new { id = hospital.HospitalID })" method="get" style="margin-left: 10px;">
                                        <button type="submit" style="background-color:#e8f6f9;color:#004D71;border:none;border-radius:4px;font-weight:600;border-color:#00b3d8;">View All</button>
                                    </form>
                                }
                            </div>
                        }

                   @*  <br/>
                   
                 
                        @if (hospital.DepartmentHospitalProfiles != null && hospital.DepartmentHospitalProfiles.Any())
