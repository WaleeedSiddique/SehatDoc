@using SehatDoc.DepartmentDTO_s;
@model DepartmentDTO
@{
    ViewBag.Message = "Department";
    Layout = "_AdminDashboard";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3" style="margin-top:50px;">
            <div class="card">
                <div class="=card-header">
                    <h4 class="text-center my-3">Add Department</h4>
                </div>
                <form asp-controller="Department" asp-action="Create" method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="DepartmentName">Department Name</label>
                            <input asp-for="DepartmentName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="DepartmentDescription">Department Description</label>
                            <input asp-for="DepartmentDescription" class="form-control" />
                        </div>
                        <div class="card-footer text-right">
                            <button type="button" class="btn btn-light">Reset All</button>
                            <button class="btn btn-primary">Submit</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
